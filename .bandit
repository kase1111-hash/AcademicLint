# Bandit Security Scanner Configuration
# See: https://bandit.readthedocs.io/en/latest/config.html

[bandit]
# Directories to exclude from scanning
exclude_dirs = tests,docs,examples,.git,.tox,venv,env

# Tests to skip
# B101: assert_used - asserts are ok for validation
# B104: hardcoded_bind_all_interfaces - dev server binds to 0.0.0.0
skips = B101,B104

# Test plugins to run
# Comment out to run all tests
# tests = B102,B103,B105,B106,B107,B108,B110,B112,B201,B301,B302,B303,B304,B305,B306,B307,B308,B309,B310,B311,B312,B313,B314,B315,B316,B317,B318,B319,B320,B321,B322,B323,B324,B325,B401,B402,B403,B404,B405,B406,B407,B408,B409,B410,B411,B412,B413,B501,B502,B503,B504,B505,B506,B507,B508,B509,B601,B602,B603,B604,B605,B606,B607,B608,B609,B610,B611,B701,B702,B703

# Severity levels to report (LOW, MEDIUM, HIGH)
severity = LOW,MEDIUM,HIGH

# Confidence levels to report (LOW, MEDIUM, HIGH)
confidence = LOW,MEDIUM,HIGH

# Output format (csv, custom, html, json, screen, txt, xml, yaml)
format = screen

# Generate aggregate report
aggregate = file
